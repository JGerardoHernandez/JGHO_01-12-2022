@model ML.AlumnoMateria
@{
    ViewBag.Title = "GetMateriasAsignadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row">

        <div class="col-md-12">

            <h2>Alumno Materia</h2>

        </div>

    </div>

    <div class="row">

        <div class="col-md-12">

            <hr />

        </div>

    </div>

    <div class="row">

        <div class="col-md-12">


            <div class="form-horizontal">

                <div class="form-group">


                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Alumno.Nombre)

                        @Html.TextBoxFor(model => model.Alumno.Nombre, new { @class = "form-control", disabled = "disabled" })

                        @Html.ValidationMessageFor(model => model.Alumno.Nombre)

                    </div>

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Alumno.ApellidoPaterno)

                        @Html.TextBoxFor(model => model.Alumno.ApellidoPaterno, new { @class = "form-control", disabled = "disabled" })

                        @Html.ValidationMessageFor(model => model.Alumno.ApellidoPaterno)
                    </div>

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Alumno.ApellidoMaterno)

                        @Html.TextBoxFor(model => model.Alumno.ApellidoMaterno, new { @class = "form-control", disabled = "disabled" })

                        @Html.ValidationMessageFor(model => model.Alumno.ApellidoMaterno)

                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Alumno.IdAlumno)

                            @Html.TextBoxFor(model => model.Alumno.IdAlumno, new { @class = "form-control", disabled = "disabled" })

                            @Html.ValidationMessageFor(model => model.Alumno.IdAlumno)

                            @*hidden*@

                        </div>

                    </div>

                </div>

            </div>
        </div>

    </div>

</div>


<div class="row">
    <div class="col-md-12 col-sm-3">
        <a class="btn btn-success" href="@Url.Action("GetMateriasNoAsignadas", "AlumnoMateria", new { IdAlumno = Model.Alumno.IdAlumno })">Agregar Materia</a>
    </div>
</div>

<div class="row" style="padding-top:30px">
    <div class="col-md-12">
        <table class="table table-dark table-hover">
            <!--table table-hover-->
            <tr>
                <th class="hidden" scope="col">
                    IdMateria
                </th>
                <th class="text-center" scope="col">
                    Nombre
                </th>
                <th class="text-center" scope="col">
                    Costo
                </th>

                <th class="text-center" scope="col">
                    Eliminar
                </th>
            </tr>
            @foreach (ML.AlumnoMateria AlumnoMateria in Model.AlumnosMaterias)
            {
                <tr>
                    <td class="hidden">
                        @AlumnoMateria.Materia.IdMateria
                    </td>
                    <td class="text-center">
                        @AlumnoMateria.Materia.Nombre
                    </td>
                    <td class="text-center">
                        @AlumnoMateria.Materia.Costo
                    </td>

                    <th class="text-center">
                        <a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "AlumnoMateria", new { IdAlumnoMateria = AlumnoMateria.IdAlumnoMateria })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a>
                    </th>
                </tr>
            }
        </table>
    </div>
</div>